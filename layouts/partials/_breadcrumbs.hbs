<ol class="tn-breadcrumbs">
    {{#unless @root.index}}
        <li class="tn-breadcrumb">
            <a href="{{ @root.webRoot }}">Home</a>
        </li>
    {{/unless}}
    {{#each breadcrumb_path}}
      {{#unless file.nav_category}}
      <li class="tn-breadcrumb">
          {{#if file}}
              <a href="{{ @root.webRoot }}{{ path }}">{{ file.title }}</a>
          {{else}}
              {{ name }}
          {{/if}}
      </li>
      {{/unless}}
    {{/each}}
    <li class="tn-breadcrumb tn-breadcrumb--active">
        {{ title }}
    </li>
</ol>
