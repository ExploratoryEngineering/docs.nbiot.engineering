{
  "name": "docs-scaffold",
  "version": "0.1.0",
  "description": "Scaffold repo which documentations can fork from",
  "main": "index.js",
  "scripts": {
    "clean": "del-cli build/",
    "build:script": "webpack && uglifyjs node_modules/barba.js/dist/barba.min.js node_modules/lunr/lunr.js node_modules/swagger-ui-dist/swagger-ui-bundle.js node_modules/swagger-ui-docs-preset/dist/swagger-ui-docs-preset.js --output build/script/vendor.js",
    "build:style": "node lib/build-style.js",
    "build:docs": "node lib/build-docs.js",
    "build:docs:dev": "npm run build:docs -- --dev",
    "build": "npm run clean && npm run build:docs && npm run build:style && npm run build:script",
    "dev": "gulp watch",
    "test": "npm run test:eslint && npm run test:stylelint",
    "commitmsg": "validate-commit-msg",
    "test:eslint": "eslint index.js lib/**/*.js script/**/*.js webpack.config.js",
    "eslint:fix": "eslint index.js lib/**/*.js script/**/*.js webpack.config.js --fix",
    "test:stylelint": "stylelint style/**/*.scss",
    "release": "standard-version --silent",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TelenorFrontend/docs-scaffold.git"
  },
  "author": "frontend@telenordigital.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/TelenorFrontend/docs-scaffold/issues"
  },
  "homepage": "https://github.com/TelenorFrontend/docs-scaffold#readme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.2.0",
    "gulp": "^3.9.1",
    "gulp-connect": "^5.0.0",
    "husky": "^0.14.3",
    "standard-version": "^4.2.0",
    "stylelint": "^7.13.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-order": "^0.5.0",
    "stylelint-scss": "^1.5.1",
    "tn-conventions": "git+https://github.com/TelenorFrontend/conventions.git",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "barba.js": "^1.0.0",
    "del-cli": "^1.1.0",
    "handlebars": "^4.0.10",
    "highlight.js": "^9.12.0",
    "lunr": "^2.1.2",
    "metalsmith": "^2.3.0",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-lunr": "git+https://github.com/TelenorFrontend/metalsmith-lunr.git",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-metallic": "^2.0.1",
    "metalsmith-navigation": "^0.2.9",
    "metalsmith-swagger-ui": "git+https://github.com/TelenorFrontend/metalsmith-swagger-ui.git",
    "mkdir-recursive": "^0.3.0",
    "mkdirp": "^0.5.1",
    "node-normalize-scss": "^3.0.0",
    "node-sass": "^4.5.3",
    "remark": "^8.0.0",
    "strip-markdown": "^3.0.1",
    "swagger-ui-dist": "^3.0.21",
    "swagger-ui-docs-preset": "git+https://github.com/TelenorFrontend/swagger-ui-docs-preset.git",
    "telenor-component-library": "git+https://github.com/TelenorFrontend/component-library.git",
    "textversionjs": "^1.0.2",
    "uglify-es": "^3.0.27",
    "webpack": "^3.5.0"
  }
}
